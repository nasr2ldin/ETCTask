@model IEnumerable<ETCTask.Models.Category>

@{
    ViewBag.Title = "Categories";
}

<div class="col-md-12">
    <div class="panel panel-primary">
        <div class="panel-heading">
            <h3 class="panel-title">List of Category</h3>
        </div>
        <div class="panel-body">
            <div class="row">
                <div class="col-md-6">
                    <p>
                        @Html.ActionLink("Add New Category", "AddCategory", null, new {@class = "btn btn-primary"})
                    </p>
                    <table class="table table-bordered">
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.CategoryName)
                            </th>
                            <th></th>
                        </tr>

                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.CategoryName)
                                </td>
                                <td>
                                    @Html.ActionLink("Edit", "Update", new {id = item.CategoryId}, new {@class = "btn btn-success"})
                                    @Html.ActionLink("Details", "Details", new {id = item.CategoryId}, new {data_modal = "", @class = "btn btn-default"})
                                    @Html.ActionLink("Delete", "Delete", new {id = item.CategoryId}, new {data_modal = "", @class = "btn btn-danger"})
                                </td>
                            </tr>
                        }

                    </table>

                </div>
            </div>
        </div>
    </div>
</div>
@Html.Partial("_Modaldialog")
<script src="~/Scripts/Modaldialog.js"></script>