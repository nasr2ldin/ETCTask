@model ETCTask.Models.Auth.User
<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
    <h3 class="modal-title" id="ModalLabel">Delete User</h3>
</div>
<div class="modal-body">
    <h4 class="red">Are you sure you want to delete this User [@Html.DisplayFor(model => model.UserName)]? </h4>
</div>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="modal-footer">
        <input type="submit" value="Yes" class="btn btn-danger"/>
        <button class="btn btn-info" type="button" data-dismiss="modal">No</button>
    </div>
}