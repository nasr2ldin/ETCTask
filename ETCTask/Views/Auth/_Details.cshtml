@model ETCTask.Models.Auth.User

<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
    <h3 class="modal-title" id="ModalLabel">User Details</h3>
</div>
<div class="modal-body">
    <div class="row">
        <div class="col-sm-12 col-md-12">
            <div class="thumbnail">
                <div class="caption">
                    <table class="table table-responsive table-striped">
                        <tr>
                            <th>@Html.DisplayNameFor(model => model.UserName)</th>
                            <th></th>
                        </tr>

                        <tr style="font-size: 16px;">
                            <td>@Html.DisplayFor(model => model.UserName)</td>
                            <th></th>
                        </tr>
                    </table>
                    <h4>User Permission:</h4>
                    @if (ViewBag.GroupNames.Count == 0)
                    {
                        <h3 class="text-info">No Groups found for this user.</h3>
                    }
                    else
                    {
                        <ul class="list-group">
                            <li class="list-group-item">Roles:</li>
                            @foreach (var item in ViewBag.GroupNames)
                            {
                                <li class="list-group-item text-primary font-weight">@item</li>
                            }
                        </ul>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
<div class="modal-footer">
    <button class="btn btn-default m-t-lg" type="button" data-dismiss="modal">Colse</button>
</div>