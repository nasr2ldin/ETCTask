@model IEnumerable<ETCTask.Models.Auth.Role>
@{
    Layout = null;
}

<div class="col-md-12">
    <p>
        @Html.ActionLink("Add Permissions", "Create", null, new {data_modal = "", @class = "btn btn-primary"})
    </p>
    <table class="table table-bordered">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr class="item-user">
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new {id = item.Id}, new {data_modal = "", @class = "btn btn-success"})
                    @Html.ActionLink("Details", "Details", new {id = item.Id}, new {data_modal = "", @class = "btn btn-default"})
                    @Html.ActionLink("Delete", "Delete", new {id = item.Id}, new {id = "delete", data_modal = "", @class = "btn btn-danger"})
                </td>
            </tr>
        }

    </table>
</div>